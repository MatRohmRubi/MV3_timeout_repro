@page
@using NativeMessagingHost
@model NativeMessagingHost.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<head>
  <meta http-equiv="refresh" content="1">
</head>
<p>
  Alive: @((DateTime.Now - GlobalAction.Started).ToString("g"))
</p> 
<pre>
  @(GlobalAction.GetLog())
</pre>
<form method="post">
  <input type="hidden" name="action" value="SendMessage" />
  <input type="submit" />
</form>
